<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/intro_screen"
    android:weightSum="1"
    android:background="@color/colorPrimary">

    <ImageView android:id="@+id/introscreenimage" android:layout_width="wrap_content"
        android:layout_height="190dp"
        android:layout_gravity="center"
        android:src="@drawable/web_hi_res_512"
        android:layout_weight="0.15" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIMPLE"
        android:freezesText="false"
        android:textColorLink="?attr/actionModeSplitBackground"
        android:layout_gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:background="@color/colorPrimary"
        android:textColor="@color/bright_foreground_material_dark"
        android:id="@+id/textView3" />

    <TextView android:layout_width="113dp"
        android:layout_height="wrap_content"
        android:text="'TO DO'"
        android:freezesText="false"
        android:textColorLink="?attr/actionModeSplitBackground"
        android:layout_gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:background="@color/colorPrimary"
        android:textColor="@color/bright_foreground_material_dark"
        android:textStyle="normal|bold" />

</LinearLayout>